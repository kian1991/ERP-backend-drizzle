{
  "name": "erp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "prettier": "prettier-config-standard",
  "scripts": {
    "start": "tsc && node dist/src/server.js ",
    "build": "tsc",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint . --ext .ts --cache --cache-strategy content",
    "lint-clean": "rm -rf .eslintcache && eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "db-migrate": "tsx db/migrate.ts",
    "db-generate": "drizzle-kit generate:pg",
    "db-insert": "tsx db/inserts/insert.ts",
    "db-clean": "docker compose down --rmi all --volumes --remove-orphans && rm -rf postgres-data && rm -rf ./db/migrations/* && docker compose up -d",
    "test": "jest --watch --verbose"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.3.0",
    "postgres": "^3.4.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "drizzle-kit": "^0.20.13",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "prettier-config-standard": "^7.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
